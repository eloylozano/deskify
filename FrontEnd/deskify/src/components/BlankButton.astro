---
import "../styles/global.css";
const { text, href, class: additionalClass } = Astro.props;
---

<a class={`btn-gradient-2 px-16 py-3 mt-12 cursor-pointer font-normal  ${additionalClass}`} href={href}>
  {text}
</a>

<style>
  .btn-gradient-2 {
    background: linear-gradient(white, white) padding-box,
                linear-gradient(45deg, #00ff7a, #00aa6f 100%) border-box;
    border-radius: 50em;
    border: 3px solid transparent;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    color: #00aa6f; /* Color del texto */
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .btn-gradient-2:hover {
    background: linear-gradient(white, white) padding-box,
                linear-gradient(45deg, #00aa6f, #02353C 100%) border-box;
    transform: scale(1.05);
    box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.2);
  }
</style>
