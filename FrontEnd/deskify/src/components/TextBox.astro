---
const { h3, title, desc, image, alt, imagePosition } = Astro.props;
import Line from "../components/Line.astro";
import "../styles/global.css";
import GradientTitle from "../components/GradientTitle.astro";
import SubTitle from "../components/SubTitle.astro";
import Text from "../components/Text.astro";
---

<div
  class={`mt-50 flex justify-between items-center ${imagePosition === "left" ? "flex-row-reverse" : ""} gap-x-[100px]`}
>
  <div class="w-[60%]">
    <GradientTitle text={h3} />
    <SubTitle text={title} />
    <Line />
    <Text text={desc} />
  </div>
  <img src={image} alt={alt} class="w-[40%]" />
</div>
