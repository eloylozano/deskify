<style>
  /* Efecto de subrayado animado para los enlaces */
  .space-y-2 a::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background-color: currentColor;
    transform: scaleX(0);
    transform-origin: bottom right;
    transition: transform 0.3s ease;
  }

  .space-y-2 a:hover::after {
    transform: scaleX(1);
    transform-origin: bottom left;
  }

  /* Estilos para el acordeón */
  .accordion-toggle {
    transition: all 0.3s ease;
    text-align: left;
  }

  .accordion-toggle.active svg {
    transform: rotate(180deg);
  }

  .accordion-content.active {
    display: block;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const accordionToggles = document.querySelectorAll(".accordion-toggle");

    accordionToggles.forEach((toggle) => {
      if (window.innerWidth < 640) {
        const content = toggle.nextElementSibling as HTMLElement;
        toggle.classList.add("active");
        content.classList.add("active");
      }

      toggle.addEventListener("click", function (this: HTMLElement) {
        if (window.innerWidth >= 640) return;

        this.classList.toggle("active");
        const content = this.nextElementSibling as HTMLElement;

        content.classList.toggle("active");

        if (content.classList.contains("active")) {
          content.style.maxHeight = content.scrollHeight + "px";
        } else {
          content.style.maxHeight = "0";
        }
      });
    });

    window.addEventListener("resize", function () {
      const isMobile = window.innerWidth < 640;
      accordionToggles.forEach((toggle) => {
        const content = toggle.nextElementSibling as HTMLElement;
        if (isMobile) {
          if (toggle.textContent?.trim() === "Enterprise") {
            toggle.classList.add("active");
            content.classList.add("active");
            content.style.maxHeight = content.scrollHeight + "px";
          } else {
            toggle.classList.remove("active");
            content.classList.remove("active");
            content.style.maxHeight = "0";
          }
        } else {
          toggle.classList.remove("active");
          content.classList.add("active");
          content.style.maxHeight = "";
        }
      });
    });
  });
</script>
